<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="view_advance_clearing_followup_report_graph" model="ir.ui.view">
            <field name="name">advance.clearing.followup.report.graph</field>
            <field name="model">advance.clearing.followup.report.sql</field>
            <field name="arch" type="xml">
                <graph string="Advance Clearing Followup Report" type="pivot">
                    <field name="advance_expense_id" type="row"/>
                    <field name="employee_code"  type="row"/>
                    <field name="employee_name" type="row"/>
                    <field name="org_id" type="row"/>
                    <field name="date_due" type="row"/>
                    <field name="invoice_id" type="row"/>
                    <field name="date_invoice" type="row"/>
                    <field name="expense_id" type="row"/>
                    <field name="expense_invoice_id" type="row"/>
                    <field name="amount_advance" type="measure"/>
                    <field name="advance_credit" type="measure"/>
                    <field name="amount_remaining" type="measure"/>
                </graph>
            </field>
        </record>
        
        <record id="view_advance_clearing_followup_report_tree" model="ir.ui.view">
            <field name="name">advance.clearing.followup.report.tree</field>
            <field name="model">advance.clearing.followup.report.sql</field>
            <field name="arch" type="xml">
                <tree string="Advance Clearing Followup">
                    <field name="advance_expense_id" />
                    <field name="employee_code"/>
                    <field name="employee_name"/>
                    <field name="org_id"/>
                    <field name="date_due"/>
                    <field name="invoice_id"/>
                    <field name="date_invoice"/>
                    <field name="expense_id"/>
                    <field name="amount_advance" sum="amount_advance"/>
                </tree>
            </field>
        </record>
        
        <record id="view_advance_clearing_followup_report_search" model="ir.ui.view">
            <field name="name">advance.clearing.followup.report.search</field>
            <field name="model">advance.clearing.followup.report.sql</field>
            <field name="arch" type="xml">
                <search string="Advance Clearing Followup">
                    <group expand="1" string="Group By">
                        <filter string="Advance Doc No." name="advance_expense_id" context="{'group_by':'advance_expense_id'}"/>
                        <filter string="Ex. Doc No." name="expense_id" context="{'group_by':'expense_id'}"/>
                        <filter string="RV Doc No." name="invoice_id" context="{'group_by':'invoice_id'}"/>
                        <filter string="Employee" name="employee_id" context="{'group_by':'employee_id'}"/>
                        <filter string="Org." name="org_id" context="{'group_by':'org_id'}"/>
                        <filter string="KV Doc No." name="expense_invoice_id" context="{'group_by':'expense_invoice_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <record id="action_advance_clearing_followup" model="ir.actions.act_window">
            <field name="name">Advance Clearing Followup Report</field>
            <field name="res_model">advance.clearing.followup.report.sql</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,graph</field>
            <field name="context">{'search_default_advance_expense_id':1,'search_default_expense_id':1,'group_by':[]}</field>
            <field name="search_view_id" ref="view_advance_clearing_followup_report_search"/>
        </record>
    </data>
</openerp>
